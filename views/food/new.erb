<section class="flex-container">
  <aside class="flex-item sidebar"></aside>
  <main class="flex-item main center">

    <div class="center justify">
        <p>Add new foods to the Micronutrient Tracker:</p>
    </div>
      <form method="post" action="/food/create">

        <div class="outer">
          <div class="label">
            <label for="food-name">Food Name:</label>
          </div>
          <div class="input">
            <input type="text" id="food-name" name="name" placeholder="Enter Food Name" required >
          </div>
        </div>

        <div class="outer">
          <div class="label">
            <label for="food-type-select">Select Food Type:</label>
          </div>
          <div class="input">
            <select id="food-type-select" name="food_types_id">
              <% @all_food_types.each do |food_type| %>
                  <option value=<%= food_type.id %>><%= food_type.name %></option>
              <% end %>
            </select>
          </div>
        </div>

        <div class="outer">
          <br>
        </div>

       <% @all_nutrients.each do |nutrient| %>
       <div class="outer">
         <div class="label">
           <label for="nutrient-name"> <%= "#{nutrient.name} (#{nutrient.uom})" %> </label>
         </div>
         <div class="input">
           <input type="number" id="nutrient-quantity" name="<%= nutrient.name %>" placeholder="Enter quantity" required step = "0.001" min = 0 >
          </div>
       </div>
       <% end %>
       <div class="outer">
         <div class="label">
         </div>
         <div class="input">
           <input type="submit" value="Add New Food">
         </div>
       </div>
      </form>
  </main>
  <aside class="flex-item sidebar"></aside>
</section>
